package jStore;

import java.util.Scanner;

public class StandardDeviation {

	public static void main(String[] args) {
		
		System.out.println("*** Welcome to the PM - Standard Deviation Calculator. ***\n");
		System.out.println("It consists of two things.");
		System.out.println("1. Pasmistic Duration; 2. Optimistic Duration. \n");
		
		@SuppressWarnings("resource")
		Scanner myInput = new Scanner(System.in);
		
		System.out.println("Please enter pasmistic duration details: ");
		float V1 = myInput.nextFloat();
		
		System.out.println("Please enter optimistic duration  details: ");
		float V2 = myInput.nextFloat();
		
		float SD = (V1 - V2) / 6;
		
		System.out.println("The 'Standard Deviation' value is: "+SD);		

	}

}

