package jStore;

import java.util.Scanner;

public class ReturnOnInvestment {

	public static void main(String[] args) {
		
		System.out.println("*** Welcome to the PM - Return On Investment Calculator. ***\n");
		System.out.println("It consists of two things.");
		System.out.println("1. Gain; 2. Cost. \n");
		
		@SuppressWarnings("resource")
		Scanner myInput = new Scanner(System.in);
		
		System.out.println("Please enter gain details: ");
		float V1 = myInput.nextFloat();
		
		System.out.println("Please enter cost details: ");
		float V2 = myInput.nextFloat();
		
		float ROI = (V1 - V2) / V2;
		
		System.out.println("The 'Return On Investment' value is: "+ROI);		

	}

}
