package jStore;

import java.util.Scanner;

public class EstimateAtCompletion {

	public static void main(String[] args) {
		System.out.println("*** Welcome to the PM - Estimate At Completion Calculator. ***\n");
		System.out.println("It consists of two things.");
		System.out.println("1. Budget At Completion; 2. Cost Performance Index. \n");
		
		@SuppressWarnings("resource")
		Scanner myInput = new Scanner(System.in);
		
		System.out.println("Please enter budget at completion details: ");
		float V1 = myInput.nextFloat();
		
		System.out.println("Please enter cost performance index details: ");
		float V2 = myInput.nextFloat();
		
		float EAC = V1 / V2;
		
		System.out.println("The 'Estimate At Completion' value is: "+EAC);		

	}

}

