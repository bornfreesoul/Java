package jStore;

import java.util.Scanner;

public class EstimateToComplete {

	public static void main(String[] args) {
	
		System.out.println("*** Welcome to the PM - Estimate To Complete Calculator. ***\n");
		System.out.println("It consists of two things.");
		System.out.println("1. Estimated Actual Cost; 2. Actual Cost. \n");
		
		@SuppressWarnings("resource")
		Scanner myInput = new Scanner(System.in);
		
		System.out.println("Please enter estimated actual cost details: ");
		float V1 = myInput.nextFloat();
		
		System.out.println("Please enter actual cost details: ");
		float V2 = myInput.nextFloat();
		
		float ETC = V1 - V2;
		
		System.out.println("The 'Estimate To Complete' value is: "+ETC);		

	}

}
