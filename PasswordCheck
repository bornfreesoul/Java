import java.util.Scanner;

public class RefresherOne {

	public static void main(String[] args) {

		Scanner myInput1 = new Scanner(System.in);
		
		int counter = 0;
			while (counter <3) //Only three tries. 3 turns hard coded in code.
			{
				System.out.println("Please enter your password charcters: ");
				String myString2 = myInput1.nextLine();
				counter++; //Counter counts the number of tries.
				if (myString2.equals("Tony Stark"))
				{	
				System.out.println("Database access granted.");
				break; //While loop break function used, other wise, code continue asking pwd.
				}			
				else
				{
				System.out.println("Wrong data input.");
				}		
			}
			
  }
}
