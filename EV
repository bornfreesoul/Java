package jStore;

import java.util.Scanner;

public class EarnedValue {

		public static void main(String[] args) {
			
			System.out.println("*** Welcome to the PM - Earned Value Calculator. ***\n");
			System.out.println("It consists of two things.");
			System.out.println("1. Percentage Of Complete Work; 2. Budget At Completion \n");
			
			@SuppressWarnings("resource")
			Scanner myInput = new Scanner(System.in);
			
			System.out.println("Please enter percentage of complete work details: ");
			float V1 = myInput.nextFloat();
			
			System.out.println("Please enter budget at completion details: ");
			float V2 = myInput.nextFloat();
			
			float EV = (V1/100) * V2;
			
			System.out.println("The earned value is: "+EV);		

		}

	}

