package jStore;

import java.util.Scanner;

public class CostVariance {

	public static void main(String[] args) {		
			
			System.out.println("*** Welcome to the PM - Cost Variance Calculator. ***\n");
			System.out.println("It consists of two things.");
			System.out.println("1. Earned Value; 2. Actual Cost. \n");
			
			@SuppressWarnings("resource")
			Scanner myInput = new Scanner(System.in);
			
			System.out.println("Please enter earned value details: ");
			float V1 = myInput.nextFloat();
			
			System.out.println("Please enter actual cost details: ");
			float V2 = myInput.nextFloat();
			
			float CV = V1 - V2;
			
			System.out.println("The Cost Variance value is: "+CV);		

		}

	}

